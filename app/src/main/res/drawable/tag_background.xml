<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Default colour (can be overridden programmatically) -->
    <solid android:color="#FF0000"/> <!-- red as default -->

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Optional padding inside the tag -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>