<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <!-- Card content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/card_background">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:text="Lorem ipsum dolor sit amet, consectetur"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/primary_dark_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                app:tint="@color/primary_dark_blue" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet"
                android:layout_marginStart="4dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_time"
                app:tint="@color/primary_dark_blue" />

            <TextView
                android:id="@+id/closingDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-08-13 18:30:26 UTC"
                android:layout_marginStart="4dp"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Bookmark button bottom-right -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/bookmarkButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/bookmark_selector"
        android:contentDescription="@string/bookmark"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/tag_background"
        android:visibility="gone" />

</FrameLayout>
