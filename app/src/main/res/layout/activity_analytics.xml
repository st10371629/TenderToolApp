            <ImageView
                android:id="@+id/analyticsHeaderImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/analytics_header_description"
                android:scaleType="fitCenter"
                android:src="@drawable/analytics_header_banner"
                android:layout_marginBottom="8dp" />

            <!-- Wrap ALL content after header -->
            <LinearLayout
                android:id="@+id/contentWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <!-- Daily Stats Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Daily Active Time Card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/analytics_daily_active_time_label"
                            android:textColor="@color/text_input_grey"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_daily_active_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/analytics_card_bg"
                            android:gravity="center"
                            android:paddingVertical="16dp"
                            android:text="@string/analytics_daily_active_time_value"
                            android:textColor="@color/text_label_blue"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" />

                    <!-- Tenders Searched Card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
