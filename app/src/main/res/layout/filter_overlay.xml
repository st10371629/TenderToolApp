<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Closing date filter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Closing Date"
        android:textColor="@color/primary_dark_blue"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/closingDateGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/closing1Week"
            android:text="1 week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary_dark_blue"
            android:textColor="@android:color/black"/>

        <RadioButton
            android:id="@+id/closing1Month"
            android:text="1 month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary_dark_blue"
            android:textColor="@android:color/black"/>

        <RadioButton
            android:id="@+id/closing3Months"
            android:text="3 months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary_dark_blue"
            android:textColor="@android:color/black"/>
    </RadioGroup>

    <!-- Alphabetical order -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort By"
        android:layout_marginTop="16dp"
        android:textColor="@color/primary_dark_blue"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/alphabeticalGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/alphabetAsc"
            android:text="A → Z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary_dark_blue"
            android:textColor="@android:color/black"/>

        <RadioButton
            android:id="@+id/alphabetDesc"
            android:text="Z → A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primary_dark_blue"
            android:textColor="@android:color/black"/>
    </RadioGroup>

    <!-- Source filter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source"
        android:layout_marginTop="16dp"
        android:textColor="@color/primary_dark_blue"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/sourceEskom"
        android:text="Eskom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/primary_dark_blue"
        android:textColor="@android:color/black"/>

    <CheckBox
        android:id="@+id/sourceEtenders"
        android:text="eTenders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/primary_dark_blue"
        android:textColor="@android:color/black"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:weightSum="3"
        android:paddingHorizontal="8dp">

        <Button
            android:id="@+id/cancelButton"
            android:text="Cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/clearButton"
            android:text="Clear"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/grey"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/applyButton"
            android:text="Apply"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="@color/primary_dark_blue"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>
